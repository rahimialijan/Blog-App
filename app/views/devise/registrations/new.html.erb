<div class="container card", style="width: 34rem;">
<br>
<h2>Sign up</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field row mb-4 text-center">
    <%= f.label :name, class:'col-sm-3 col-form-label' %><br>
    <div class="col-sm-8">
    <%= f.text_field :name, autofocus:true , autocomplete: "name", class:'form-control'%>
    </div>
  </div>

  <div class="field row mb-4 text-center">
    <%= f.label :email, class:'col-sm-3 col-form-label' %><br />
    <div class="col-sm-8">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
    </div>
  </div>

  <div class="field row mb-4 text-center">
    <%= f.label :password, class:'col-sm-3 col-form-label' %><br>
    <div class="col-sm-8">
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
    </div>
  </div>

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  <div class="field row mb-4 text-center">
    <%= f.label :password_confirmation, class:'col-sm-3 col-form-label' %><br />
    <div class="col-sm-8">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
    </div>
  </div>

  <!-- Hidden Field for posts_counter -->
  <%= f.hidden_field :posts_counter, value: 0 %>

  <div class="actions text-center">
    <%= f.submit "Sign up", class:'btn btn-success' %>
  </div>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
<br>
</div>